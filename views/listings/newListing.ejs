<%- layout("../layouts/boilerplate.ejs") %>
    <div class="row">
        <div class="col-8 offset-2 mt-3 mb-4">
            <h3>Create a new listing</h3>
            <br>
            <form method="POST" action="/listings" class="needs-validation" novalidate enctype="multipart/form-data">
                <div class="mb-4" required>
                    <label for="title" class="form-label">Title</label>
                    <input id="title" type="text" name="listing[title]" placeholder="Add a catchy title"
                        class="form-control" required>
                    <div class="valid-feedback">
                        Looks Good!
                    </div>
                    <div class="invalid-feedback">
                        Please enter title
                    </div>
                </div>
                <div class="mb-4">
                    <label for="description" class="form-label">Description</label>
                    <textarea id="description" type="text" name="listing[description]" placeholder="enter description"
                        class="form-control" required></textarea>
                    <div class="valid-feedback">
                        Great!
                    </div>
                    <div class="invalid-feedback">
                        Enter a short description
                    </div>
                </div>
              
                
                

                <div class="mb-4">
                    <label for="image" class="form-label">Upload Image</label>
                    <input type="file" id="image" name="listing[image]" class="form-control" required>
                </div>
                <div class="row">

                    <div class="mb-4 col-md-4">
                        <label for="price" class="form-label">Price</label>
                        <input id="price" name="listing[price]" placeholder="1500" class="form-control" required>
                        <div class="invalid-feedback">
                            Price should be valid
                        </div>
                    </div>
                    <div class="mb-4 col-md-8">
                        <label for="location" class="form-label">Location</label>
                        <input id="location" type="text" name="listing[location]" placeholder="Jaipur, Rajasthan"
                            class="form-control" required>
                        <div class="valid-feedback">
                            Nice!
                        </div>
                        <div class="invalid-feedback">
                            Location should be valid
                        </div>
                    </div>

                </div>
                <div class="mb-4">
                    <label for="country" class="form-label">Country</label>
                    <input id="country" type="text" name="listing[country]" placeholder="India" class="form-control"
                        required>
                    <div class="valid-feedback">
                        Good!
                    </div>
                    <div class="invalid-feedback">
                        Country should be valid
                    </div>
                </div>
                <button class="btn btn-dark add-btn">create</button>
            </form>

        </div>
    </div>